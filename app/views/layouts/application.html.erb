<!DOCTYPE html>
<html>
<head>
  <title>Opinion</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="notice_wrapper">
    <% if notice %>
       <p class="notice"><%= notice %></p>
    <% elsif alert %>  
       <p class="alert"><%= alert %></p>
    <% end %>   
  </div>
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Brainstorming', publications_path, class: 'navbar-brand' %>
    </div>
    <%if user_signed_in?%>
      <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete %>
      <span style="color:white;"><%= current_user.name %></span>
    <%else%>
      <%= link_to "Iniciar sesion", new_user_session_path %>
      <%= link_to "Crear cuenta", new_user_registration_path %>
    <%end%>
    <form>
     <input name="q" <%= @q %> >
     <button type="submit">Buscar</button>
    </form>
	  <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'New Publication', new_publication_path, class: 'btn btn-success', role: 'button' %></li>
          </ul>
       </div>
  </div>
</nav>

<div class="container">
	<%= yield %>
</div>

</body>
</html>
